{
    "manifest_version": 3,
    "name": "Text-to-Speech Converter",
    "version": "1.2",
    "description": "A Chrome extension to convert selected text to speech, upload documents",
    "permissions": ["activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.jpeg",
        "48": "icons/icon48.jpeg",
        "128": "icons/icon128.jpeg"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  